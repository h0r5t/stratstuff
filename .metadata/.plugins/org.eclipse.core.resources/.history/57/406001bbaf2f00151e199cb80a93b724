package stratstuff;

import java.awt.Color;
import java.awt.Graphics2D;
import java.util.ArrayList;

public class ContextCommandsMenu implements Drawable {

	private ArrayList<ContextCommand> listOfCommands;
	private int posX;
	private int posY;

	public ContextCommandsMenu(ArrayList<ContextCommand> listOfCommands, int x, int y) {
		this.listOfCommands = listOfCommands;
		this.posX = x;
		this.posY = y;
	}

	@Override
	public void draw(Graphics2D g, int xinpixels, int yinpixels) {

		int boxHeight = listOfCommands.size() * 15 + 20;
		g.setColor(Color.WHITE);
		g.fillRect(posX, posY, 150, boxHeight);
	}

}
